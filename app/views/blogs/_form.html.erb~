
<%= form_for(@blog) do |f| %>
<% if @post.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@blog.errors.count, "error") %> prohibited
        this blog from being saved:</h2>
    <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <%= f.label :title %>
  <br />
  <%= f.text_field :title, :size => 60 %>
  <br />
  <%= f.label :content %>
  <br />
  <%= f.text_area :content, :size => "60x30" %>
  <br />
  <%= f.submit %>
<% end %>
